<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vale.fitnessapp.timer.SoundActivity">

    <TextView
        android:id="@+id/textViewChooseAlarmSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="64dp"
        android:text="Choose your alarm sound"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseAlarmSound">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="23dp">

            <RadioButton
                android:id="@+id/rBSchoolFireAlarm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:checked="true"
                android:onClick="rbOnclick"
                android:text="School Fire Alarm"
                android:textColor="@color/colorAccent2"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rBTomRodriguez"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="rbOnclick"
                android:text="Tom Rodriguez"
                android:textColor="@color/colorAccent2"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rBAlienAlarmDrum"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="rbOnclick"
                android:text="Alien Alarm Drum"
                android:textColor="@color/colorAccent2"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rBSmokeAlarm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="rbOnclick"
                android:text="Smoke Alarm"
                android:textColor="@color/colorAccent2"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rBTornadoSiren"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="rbOnclick"
                android:text="Tornado Siren"
                android:textColor="@color/colorAccent2"
                android:textSize="20sp" />
        </RadioGroup>
    </RelativeLayout>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cumstom_button"
        android:text="Return"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout5" />

</android.support.constraint.ConstraintLayout>
